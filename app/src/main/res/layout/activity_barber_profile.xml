<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="claflin.livechair.com.livechair.BarberProfile"
                android:background="#F5F5F5">

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Navigate to the shop"
        android:id="@+id/navigate_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:background="#DCDCDC"
        android:textColor="#000080"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:id="@+id/shop_name_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal|fill_vertical"
        android:text="SHOP"
        android:textSize="20dp"
        android:background="#DCDCDC"
        android:textColor="#000080"
        android:textStyle="bold|italic"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="View Reviews"
        android:id="@+id/review_button"
        android:layout_above="@+id/navigate_button"
        android:layout_alignLeft="@+id/navigate_button"
        android:layout_alignStart="@+id/navigate_button"
        android:textSize="20dp"
        android:background="#C0C0C0"
        android:textStyle="bold"
        android:textColor="#0000FF"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/barbershop"
        android:layout_alignLeft="@+id/shop_name_button"
        android:layout_alignStart="@+id/shop_name_button"
        android:layout_below="@+id/shop_name_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Make Appointment"
        android:id="@+id/appointment_button"
        android:layout_above="@+id/review_button"
        android:layout_alignLeft="@+id/review_button"
        android:layout_alignStart="@+id/review_button"
        android:textColor="#000080"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#DCDCDC"/>

</RelativeLayout>
